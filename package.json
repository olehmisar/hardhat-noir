    "build": "rm -rf dist && tsc",
    "watch": "tsc -w",
    "prepublishOnly": "pnpm test && pnpm build"
  },
  "files": [
    "dist/src/",
    "src/",
    "LICENSE",
    "README.md"
  ],
  "devDependencies": {
