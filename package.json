{
  "name": "hardhat-plugin-noir",
  "version": "0.4.0",
  "description": "Hardhat plugin for Noir language",
  "repository": "github:olehmisar/hardhat-noir",
  "author": "Oleh Misarosh <olehmisar@gmail.com>",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "keywords": [
    "ethereum",
    "smart-contracts",
    "hardhat",
    "hardhat-plugin",
    "noir",
