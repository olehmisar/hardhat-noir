    "@types/node": "^22.7.9",
    "chai": "^4.2.0",
    "hardhat": "^2.0.0",
    "mocha": "^10.7.3",
    "prettier": "3.3.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  },
  "peerDependencies": {
    "hardhat": "^2.0.0"
  },
  "dependencies": {
    "@aztec/bb.js": ">=0.82.0",
